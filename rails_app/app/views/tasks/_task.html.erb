<% decorated_task = TaskDecorator.new(task, defined?(@collaborators_hash) ? @collaborators_hash : {}, defined?(@sectors_hash) ? @sectors_hash : {}) %>
<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5">  
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= task.start_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">End date:</strong>
    <%= task.end_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Due date:</strong>
    <%= task.due_date %>
  </div>  
  <div>
    <strong class="block font-medium mb-1">Collaborators:</strong>
    <%= decorated_task.collaborator_name %> - Sector: <%= decorated_task.sector_name %>
  </div>  
  <div>
    <strong class="block font-medium mb-1">Task status:</strong>
    <%= t("activerecord.attributes.task.enums.task_status.#{task.task_status}") %>
  </div>
</div>
